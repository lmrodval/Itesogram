<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp"
    app:layout_constraintVertical_chainStyle="spread"
    tools:context=".ActivityParse">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/activity_parse_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefono, Correo Electronico o Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_parse_value"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_parse_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_parse_value"
        android:text="Guardar en Parse"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintBottom_toTopOf="@id/activity_parse_save"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No se ha pedido valor"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_parse_save"
        />


</androidx.constraintlayout.widget.ConstraintLayout>